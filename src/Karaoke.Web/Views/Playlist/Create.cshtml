@model Karaoke.Web.Models.CreatePlaylistViewModel
@{
    ViewData["Title"] = "Criar Nova Playlist";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header-gradient text-center py-4">
                    <i class="bi bi-music-note-list display-4 text-white mb-2"></i>
                    <h2 class="text-white mb-0">Nova Playlist de Karaoke</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nome" class="form-label fw-bold">
                                <i class="bi bi-pencil text-warning"></i> @Html.DisplayNameFor(m => m.Nome)
                            </label>
                            <input asp-for="Nome" class="form-control form-control-lg" placeholder="Ex: Rock Nacional, MPB, Sertanejo..." />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descricao" class="form-label fw-bold">
                                <i class="bi bi-card-text text-info"></i> @Html.DisplayNameFor(m => m.Descricao)
                            </label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva o tema ou ocasião desta playlist..."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-gradient btn-lg flex-fill">
                                <i class="bi bi-check-circle"></i> Criar Playlist
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}