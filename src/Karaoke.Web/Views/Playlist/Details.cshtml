@model Karaoke.Web.Models.PlaylistDetailsViewModel
@{
    ViewData["Title"] = Model.Nome;
}

<div class="hero-section mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold text-white mb-2">
                    <i class="bi bi-music-note-list"></i> @Model.Nome
                </h1>
                @if (!string.IsNullOrEmpty(Model.Descricao))
                {
                    <p class="lead text-white-50">@Model.Descricao</p>
                }
                <div class="mt-3">
                    <span class="badge bg-light text-dark me-2">
                        <i class="bi bi-music-note"></i> @Model.TotalMusicas música(s)
                    </span>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar"></i> Criada em @Model.DataCriacao.ToString("dd/MM/yyyy")
                    </span>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <a asp-action="AddMusica" asp-route-id="@Model.Id" class="btn btn-light btn-lg shadow-sm mb-2">
                    <i class="bi bi-plus-circle"></i> Adicionar Música
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Musicas.Any())
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="empty-state text-center">
                    <i class="bi bi-music-note display-1 text-muted mb-3"></i>
                    <h3 class="text-muted">Nenhuma música adicionada</h3>
                    <p class="text-muted">Comece adicionando suas músicas favoritas de karaoke!</p>
                    <a asp-action="AddMusica" asp-route-id="@Model.Id" class="btn btn-gradient btn-lg mt-3">
                        <i class="bi bi-plus-circle"></i> Adicionar Primeira Música
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <ul id="musicas-list" class="list-group mb-4">
            @foreach (var musica in Model.Musicas.OrderBy(m => m.Ordem))
            {
                <li class="list-group-item d-flex align-items-center gap-3 musica-item @(musica.JaCantada ? "blurred" : "")" data-id="@musica.Id">
                    <input type="checkbox"
                           class="form-check-input me-2"
                           @(musica.JaCantada ? "checked" : "")
                           onchange="toggleCantada(this, @musica.Id)" />
                    <span class="flex-grow-1">
                        <strong>@musica.Titulo</strong>
                        @if (!string.IsNullOrEmpty(musica.Artista))
                        {
                            <span class="text-muted"> — @musica.Artista</span>
                        }
                        @if (!string.IsNullOrEmpty(musica.Cantor))
                        {
                            <span class="badge bg-info text-dark ms-2"><i class="bi bi-person"></i> @musica.Cantor</span>
                        }
                    </span>
                    <a href="@musica.UrlStreaming" target="_blank" class="btn btn-sm btn-gradient">
                        <i class="bi bi-play-circle"></i>
                    </a>
                    <form asp-action="RemoveMusica" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja remover esta música?');">
                        <input type="hidden" name="id" value="@musica.Id" />
                        <input type="hidden" name="playlistId" value="@Model.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </li>
            }
        </ul>
        <button class="btn btn-outline-secondary" onclick="saveOrder()">Salvar ordem</button>
    }

    <div class="mt-4 text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Voltar para Minhas Playlists
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        // Drag and drop
        const el = document.getElementById('musicas-list');
        if (el) {
            new Sortable(el, {
                animation: 150,
                handle: '.flex-grow-1',
                onEnd: function (evt) {
                    // Optionally, highlight save button or auto-save
                }
            });
        }

        // Salvar ordem no servidor
        function saveOrder() {
            const ids = Array.from(document.querySelectorAll('#musicas-list .musica-item')).map(li => li.dataset.id);
            fetch('@Url.Action("ReorderMusicas", "Playlist")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                body: JSON.stringify({ playlistId: @Model.Id, ids })
            }).then(() => location.reload());
        }

        // Marcar como cantada
        function toggleCantada(checkbox, id) {
            checkbox.disabled = true;
            fetch('@Url.Action("ToggleCantada", "Playlist")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: id, checked: checkbox.checked })
            })
            .then(response => {
                if (response.ok) {
                    const li = checkbox.closest('.musica-item');
                    if (checkbox.checked) {
                        li.classList.add('blurred');
                    } else {
                        li.classList.remove('blurred');
                    }
                } else {
                    checkbox.checked = !checkbox.checked; // Reverte se falhar
                }
            })
            .finally(() => checkbox.disabled = false);
        }
    </script>
}